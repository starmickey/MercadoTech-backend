{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js"
            ],
            "plugins": [
                "jest"
            ],
            "extends": [
                "plugin:jest/recommended"
            ],
            "rules": {
                "jest/valid-expect-in-promise": "warn"

            }
        }
    ],
    "rules": {
        "quotes": ["error", "double"]
    }
}